<div class="results-block">
  <%= render 'layouts/messages' %> 
</div>

<% if @friends %>
  <div class="card card-header results-block">
    <table class="col-md-12">
      <tbody>
        <% @friends.each do |friend|%>
          <tr>
            <td>
              <strong> Name: </strong> <%= friend.full_name %>
            </td>
            <td>
              <strong> Email: </strong> <%= friend.email %>
            </td>
            <td>
              <strong> Profile: </strong>  
              <%= link_to 'View Profile', user_path(friend), class: "btn btn-success add_button" %>
                
                <% if current_user.not_friends_with?(friend.id) %>
                    <%= link_to 'Add Friend', friendships_path(friend: friend), class: "btn btn-success", method: :post %>    
                <% else %>
                    <span class="badge badge-secondary"> You Are Friends </span>
                <% end %>
            </td>
          </tr>
        <% end %>
      <tbody>
  </div>
<% end %>